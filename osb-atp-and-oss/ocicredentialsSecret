kubectl create secret generic ocicredentials \
--from-literal=tenancy=ocid1.tenancy.oc1..aaaaaaaasdfcpzgxmglgtui3v7q \
--from-literal=region=us-phoenix-1 \
--from-literal=user=ocid1.user.oc1..aaaaaaaasdfolnsvabmmjqdilzjxwbta \
--from-literal=fingerprint=29:e9:e1:6f:ac:aa:aa:aa:aa:a0:8e:ee:3c:cc:72:d4 \
--from-literal=passphrase=foobar \
--from-file=privatekey=/Users/pparkins/oci-service-broker/osbkey.pem -n txdemo

